<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with model: user, url: user_relationships_path(user.id), method: :delete, local: true do |f| %>
      <%= f.hidden_field :follow_id, value: user.id %>
      <%= f.submit "フォロー外す" %>
    <% end %>
  <% else %>
    <%= form_with model: user, url: user_relationships_path(user.id), method: :post, local: true do |f| %>
      <%= f.hidden_field :follow_id, value: user.id %>
      <%= f.submit "フォローする" %>
    <% end %>
  <% end %>
<% end %>